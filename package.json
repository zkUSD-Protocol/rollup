{
  "name": "@zkusd/core",
  "version": "0.0.6",
  "description": "Core functionality for zkusd",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "author": "zkusd-protocol",
  "license": "Apache-2.0",
  "keywords": [
    "mina-zkapp",
    "mina-zk-app",
    "mina-dapp",
    "zkapp"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write --ignore-unknown **/*",
    "release": "changeset version && changeset publish",
    "buildw": "tsc --watch",
    "coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test": "npm run build && NODE_NO_WARNINGS=1 node --loader=ts-node/esm --enable-source-maps --test",
    "test:unit": "npm run build && NODE_NO_WARNINGS=1 node --loader=ts-node/esm --enable-source-maps --test build/src/tests/unit/**/*.test.js",
    "test:integration:lightnet:functional:happy": "npm run build && NODE_NO_WARNINGS=1 node --loader=ts-node/esm --enable-source-maps --test build/src/tests/integration/functional/happy-path.test.js",
    "test:integration:lightnet:functional:sad": "npm run build && NODE_NO_WARNINGS=1 node --loader=ts-node/esm --enable-source-maps --test build/src/tests/integration/functional/sad-path.test.js",
    "testw": "npm run build && node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "npx eslint src/* --fix"
  },
  "bin": {
    "zkusd-cli": "./dist/cli.js"
  },
  "files": [
    "build",
    "src"
  ],
  "exports": {
    ".": "./build/src/index.js",
    "./*": "./build/src/*"
  },
  "main": "./build/src/index.js",
  "types": "./build/src/index.d.ts",
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@types/bun": "latest",
    "@types/express": "4.17.21",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.1",
    "commander": "^13.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "why-is-node-running": "^3.2.2",
    "typescript-eslint": "latest",
    "@eslint/js": "latest"
  },
  "peerDependencies": {
    "express": "^4.21.2",
    "o1js": "^2.7.0"
  },
  "dependencies": {
    "@minatokens/token": "^0.16.16",
    "@mysten/sui": "^1.30.1",
    "@mysten/walrus": "^0.1.2",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.4.7",
    "js-yaml": "^4.1.0",
    "mina-signer": "^3.0.7"
  },
  "module": "index.ts"
}
